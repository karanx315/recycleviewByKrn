<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <TextView
        android:id="@+id/timeDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00 PM, 01/01/2024"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Avatar Image for sent messages -->
    <ImageView
        android:id="@+id/sendAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/send_message"
        app:layout_constraintEnd_toStartOf="@id/message"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Sent message text -->
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sent_message_background"
        android:padding="12dp"
        android:text="Sent message"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timeDate" />
</androidx.constraintlayout.widget.ConstraintLayout>
